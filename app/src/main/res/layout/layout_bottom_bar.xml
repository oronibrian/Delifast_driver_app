<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_card"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/notification_size">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/bg_card"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/card_id_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/ll_straight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bottom_shadow"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtFare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/googlesanslight"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="@dimen/spacing_medium"
                        android:singleLine="true"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="ksh" />

                    <TextView
                        android:id="@+id/txtcustomer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/googlesanslight"
                        android:gravity="center"
                        android:padding="@dimen/spacing_medium"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        tools:text="GJ 2XX - F4F4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="gone">


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:visibility="visible" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.2dp"
                android:background="@color/view_color" />

            <!--Second Phase-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:visibility="visible" />


                <LinearLayout
                    android:id="@+id/ll_end_ride"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:id="@+id/qr_image"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_near_me" />


                    </LinearLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />


                    <TextView
                        android:id="@+id/btnEndRide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/round_bg"
                        android:gravity="center"
                        android:text="End Ride"
                        android:textColor="@color/colorOrangeLine" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/spacing_medium">

                        <ImageButton
                            android:id="@+id/btncall"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            app:srcCompat="@drawable/phone"
                            app:tint="@color/colorPrimary" />


                        <ImageView
                            android:id="@+id/barcode_image"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_near_me" />


                    </LinearLayout>

                </LinearLayout>

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Large.Pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/colorAccent" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:visibility="visible" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/spacing_small"
                app:cardElevation="@dimen/card_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:fontFamily="@font/googlesansregular"

                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_xsmall">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_toEndOf="@id/ll1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0.2dp"
                                    android:background="@color/view_color" />

                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/viewheight"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:background="@color/view_color"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/ll_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPrint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?selectableItemBackgroundBorderless"
                            android:drawableTop="@drawable/print"
                            android:drawablePadding="@dimen/spacing_small"
                            android:fontFamily="@font/googlesansbold"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="Print"
                            android:textColor="@color/textchild"
                            android:textSize="@dimen/font_small"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/tvscan"

                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="12dp"
                                android:layout_gravity="center"
                                app:cardElevation="12dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_small"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_code_scanner_auto_focus_on"
                                        app:tint="@color/colorPrimaryDark" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="?selectableItemBackgroundBorderless"
                                        android:clickable="true"
                                        android:drawablePadding="@dimen/spacing_small"
                                        android:focusable="true"
                                        android:fontFamily="@font/googlesansbold"
                                        android:gravity="center"
                                        android:padding="@dimen/spacing_small"
                                        android:text="SCAN "
                                        android:textColor="@color/textchild"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"

                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_6sdp"
                                android:src="@drawable/ic_location_tracking"

                                />


                            <TextView
                                android:id="@+id/tvmenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesansbold"
                                android:gravity="center"
                                android:text="Navigation"
                                android:textColor="@color/textchild"
                                android:textSize="@dimen/font_small" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/tvcallOrder"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:background="@drawable/round_corner_green"
                            android:contentDescription="@string/txt_todo"
                            android:fontFamily="@font/googlesansbold"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/phone"
                            app:tint="@color/white" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_id_package_serach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium"
            android:visibility="gone">

            <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alliance_animDuration="300"
                app:alliance_distanceMultiplier="3"
                app:alliance_dotsRadius="5dp"
                app:alliance_drawOnlyStroke="true"
                app:alliance_firstDotsColor="@color/red_800"
                app:alliance_secondDotsColor="@color/purple_50"
                app:alliance_strokeWidth="2dp"
                app:alliance_thirdDotsColor="@color/green" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>