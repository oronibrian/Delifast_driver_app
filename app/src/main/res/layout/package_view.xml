<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/ll_to_from"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/white_round_corner"
            android:gravity="center"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:padding="@dimen/_4sdp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_tracking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_map"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/spacing_middle"
                        android:layout_marginRight="@dimen/spacing_middle"
                        android:src="@drawable/ic_location_tracking"
                        app:tint="@color/red_800" />

                    <TextView
                        android:id="@+id/source_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/spacing_small"
                        android:text="From"
                        android:textSize="@dimen/spacing_large" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivFrom"
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:src="@drawable/bg_dotted" />

                <LinearLayout
                    android:id="@+id/ll_play_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/spacing_middle"
                        android:layout_marginRight="@dimen/spacing_middle"
                        android:src="@drawable/ic_location_tracking"
                        app:tint="@color/green" />

                    <TextView
                        android:id="@+id/destination_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/spacing_small"
                        android:text="To"
                        android:textSize="@dimen/spacing_large" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ll_navigation"
                    android:layout_width="60dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:text="GO"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_navigation"
                    android:textColor="@color/colorOrangeLine" />
            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>

